generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model MenuSection {
    id           Int                  @id @unique @default(autoincrement())
    name         String               @db.VarChar(255)
    imageUrl     String?              @db.VarChar(255)
    imageAltText String?              @db.VarChar(255)
    menuType     MenuSection_menuType @default(food)
    items        MenuItem[]
}

model MenuItem {
    id            Int               @id @default(autoincrement())
    price         Decimal           @db.Decimal(6, 2)
    name          String            @db.VarChar(255)
    menuSectionId Int
    menuType      MenuItem_menuType @default(food)
    section       MenuSection       @relation(fields: [menuSectionId], references: [id])

    @@index([menuSectionId])
}

model User {
    id       Int     @id @default(autoincrement())
    username String  @unique @db.VarChar(255)
    password String
    email    String  @unique
    name     String?
}

model RewardsMember {
    id            Int    @id @default(autoincrement())
    phoneNumber   String @unique @db.VarChar(255)
    points        Int
    pendingPoints Int    @default(0)

    @@index([phoneNumber])
}

enum MenuItem_menuType {
    food
    beverage
}

enum MenuSection_menuType {
    food
    beverage
}
